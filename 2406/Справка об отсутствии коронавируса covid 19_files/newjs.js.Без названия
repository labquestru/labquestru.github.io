$(document).ready((function(){$(window).width()<980&&$(".button.allmat").length?($(window).scrollTop()>300?$(".button.allmat").removeClass("hide"):$(".button.allmat").addClass("hide"),$(window).on("scroll",(function(){$(window).scrollTop()>300?$(".button.allmat").removeClass("hide"):$(".button.allmat").addClass("hide")}))):$(".button.allmat").removeClass("hide"),$(".checkup-item .title").on("click",(function(){if($(this).parent().find(".optslinks").length){if($(this).parent().find(".optslinks").fadeIn(200),$(window).width()>1100)$(this).parent().find(".cart-block").css("top","0px");else{var t=$(this).parent().find(".optslinks").height();$(this).parent().find(".cart-block").css("top",t+85+"px")}return!1}})),$(".checkup-item .openlist").on("click",(function(){var t=$(this).data("id");$('.checkup-popup[data-id="'+t+'"]').fadeIn(300);var e=$('.checkup-item[data-id="'+t+'"]').offset(),i=$('.checkup-popup[data-id="'+t+'"] .checkup-popup-wrap').outerHeight(),c=$(".checkup-wrap").outerHeight(),s=e.top;return c-s<i&&(s-=i-(c-s)),$('.checkup-popup[data-id="'+t+'"] .checkup-popup-wrap').css("top",s+"px"),!1})),$(".checkup-popup .closebtn").on("click",(function(){return $(this).closest(".checkup-popup").fadeOut(300),!1})),$(document).on("click",(function(t){$(t.target).hasClass("checkup-popup")&&$(t.target).fadeOut(300)})),$(".checkup-list .checkup-item .openfull").on("click",(function(){return $(this).closest(".checkup-item").toggleClass("full"),!1})),$(".checkup-choose").on("click",(function(){var t=$(this).data("popup"),e=$(this).data("id"),i=$('.checkup-item[data-id="'+e+'"]').offset();return $('.checkup-choose-popup[data-id="'+t+'"]').length>0&&($('.checkup-choose-popup[data-id="'+t+'"]').fadeIn(300),$('.checkup-choose-popup[data-id="'+t+'"] .checkup-choose-popup-wrap').css("top",i.top+"px")),!1})),$(".checkup-choose-popup-wrap .js-option").on("click",(function(){$(this).parent().find(".js-option").removeClass("active"),$(this).addClass("active")})),$(".checkup-choose-popup .closebtn").on("click",(function(){return $(this).closest(".checkup-choose-popup").fadeOut(300),!1})),$(".sel .current").on("click",(function(){return $(this).parent().hasClass("num")&&($(this).parent().find(".current").toggle(),$(this).parent().toggleClass("act")),$(this).parent().find(".sel-list").toggle(),!1})),$(".sel .sel-item").on("click",(function(){var t=$(this).data("id"),e=$(this).text();return $(this).closest(".sel").find('input[type="hidden"]').val(t),$(this).closest(".sel").find(".current").text(e),$(this).closest(".sel").find(".sel-list").hide(),$(this).closest("form").submit(),!1})),$(".checkup-filter .check").on("click",(function(){var t=$(this).data("name"),e=$(this).data("val");return $(this).hasClass("active")?($(this).removeClass("active"),$('input[name="'+t+'"]').val("")):($('.checkup-filter .check[data-name="'+t+'"]').removeClass("active"),$(this).addClass("active"),$('input[name="'+t+'"]').val(e)),$(this).closest("form").submit(),!1})),$(".checkup-filter form input").on("change",(function(){$(this).closest("form").submit()})),$(".checkup-list .checkup-item .circle-option").on("mouseenter",(function(){if(!$(this).hasClass("anim")){$(this).addClass("anim");var t=$(this).data("bgcolor"),e=$(this).data("txtcolor");$(this).addClass("zin"),$(this).animate({color:t,backgroundColor:e},300,(function(){$(this).removeClass("zin")}))}})),$(".checkup-list .checkup-item .circle-option").on("mouseleave",(function(){var t=$(this).data("bgcolor"),e=$(this).data("txtcolor");$(this).addClass("zin"),$(this).animate({color:e,backgroundColor:t},300,(function(){$(this).removeClass("zin")})),$(this).removeClass("anim")}))}));