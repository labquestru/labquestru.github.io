$(document).ready((function(){if($(document).on("click",".openchat",(function(){var t=$(this).data("href");return $("#chatframe").attr("src",t),$(".videoform").show(),$(".promo").hide(),!1})),$(document).on("click",".closevideo",(function(){return $("#chatframe").attr("src",""),$(".videoform").hide(),$(".promo").show(),!1})),$(document).on("click",".opench",(function(){var t=$(this).data("id");$.post("",{act:t},(function(t){}))})),$(document).on("click",".invclient",(function(){var t=$(this).data("id");$.post("",{sendinv:t},(function(t){alert("Сообщение успешно отправлено")}))})),$(".doccabtbl").length){function t(){$.post("",(function(t){var o=$(t).find(".doccabtbl").html();$(".doccabtbl").html(o),$(".doccabtbl").find(".is_new").length&&$("#chatAudio")[0].play()}))}$('<audio id="chatAudio"><source src="/img/to-the-point.ogg" type="audio/ogg"></audio>').appendTo("body");var o=setInterval((function(){t()}),1e4);$(document).on("click",".closereq",(function(){var c=$(this).data("id");return clearInterval(o),$.post("",{close:c},(function(c){var n=$(c).find(".doccabtbl").html();$(".doccabtbl").html(n),o=setInterval((function(){t()}),1e4)})),!1}))}}));