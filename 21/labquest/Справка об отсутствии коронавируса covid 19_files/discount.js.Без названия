$(document).ready((function(){if($(".slidech").length&&($(".slidech a").on("click",(function(){var e=$(this).data("id");return $('.slidelist .slideitem[data-id="'+e+'"]').length&&($(".slidech a").removeClass("act"),$(this).addClass("act"),$(".slidelist .slideitem").removeClass("act"),$('.slidelist .slideitem[data-id="'+e+'"]').addClass("act")),!1})),$(".dsctabs .item").on("click",(function(){var e=$(this).data("id");return $(this).closest(".slideitem").find('.tabsinfo .item[data-id="'+e+'"]').length&&($(this).closest(".slideitem").find(".dsctabs .item").removeClass("act"),$(this).addClass("act"),$(this).closest(".slideitem").find(".tabsinfo .item").removeClass("act"),$(this).closest(".slideitem").find('.tabsinfo .item[data-id="'+e+'"]').addClass("act")),!1})),$(".dsctabs .item:first-child").addClass("act"),$(".tabsinfo .item:first-child").addClass("act")),$(".dsc7").length&&($(".dscrow input.inp, .dscrow select").on("focus",(function(){$(this).closest(".dscrow").addClass("focus")})),$(".dscrow input.inp, .dscrow select").on("focusout",(function(){""!=$(this).val()||$(this).closest(".dscrow").removeClass("focus")})),$(".dscrow input.inp, .dscrow select").on("keyup",(function(){""!=$(this).val()?$(this).closest(".dscrow").addClass("notempty"):$(this).closest(".dscrow").removeClass("notempty")}))),$(".dsc1 .down .icon").on("click",(function(){return $("html, body").animate({scrollTop:$(".dsc2 .title").offset().top},1e3),!1})),$("body").on("submit",".dscform1",(function(e){e.preventDefault();var t=$(this);return $.post("/include/ajax/ajax_form_send2.php",{data:t.serialize(),form_id:t.attr("id")},(function(e){if(""==e){t.trigger("reset"),$.fancybox.close();var s="#thank_you";"aksub"!=t.attr("id")&&"akcert"!=t.attr("id")||(s="#thank_you2"),$.fancybox.open({href:s,padding:[0,0,0,0],fitToView:!1})}})),!1})),$("body").on("submit",".dscform",(function(e){e.preventDefault();var t=$(this),s=!1;t=$(this);return $(t).find(".req").each((function(){""!=$(this).val()?$(this).closest(".dscrow").removeClass("err"):($(this).closest(".dscrow").addClass("err"),s=1)})),$(t).find('input[name="check1"]').length>0&&($(t).find('input[name="check1"]').prop("checked")?$(t).find('input[name="check1"]').parent().removeClass("err"):(s=1,$(t).find('input[name="check1"]').parent().addClass("err"))),s||$.post("/include/ajax/ajax_form_send2.php",{data:t.serialize(),form_id:t.attr("id")},(function(e){if(""==e){t.trigger("reset"),$.fancybox.close();var s="#thank_you";"aksub"!=t.attr("id")&&"akcert"!=t.attr("id")||(s="#thank_you2"),$.fancybox.open({href:s,padding:[0,0,0,0],fitToView:!1})}})),!1})),$(".dsc2 .dsc2list .item").length){var e=new ScrollMagic.Controller,t=$(".dsc2 .dsc2list .item .num"),s=TweenMax.staggerTo(t,3,{scale:1,ease:Power3.easeNone},.5),i=(new ScrollMagic.Scene({triggerElement:".dsc2"}).setTween(s).addTo(e),$(".dsc2 .dsc2list .item .name")),a=TweenMax.staggerTo(i,3,{y:0,opacity:1,ease:Power3.easeNone},.5);new ScrollMagic.Scene({triggerElement:".dsc2"}).setTween(a).addTo(e),i=$(".dsc2 .dsc2list .item .desc"),a=TweenMax.staggerTo(i,3,{y:0,opacity:1,ease:Power3.easeNone},.5),new ScrollMagic.Scene({triggerElement:".dsc2"}).setTween(a).addTo(e)}}));