$(document).ready((function(){var e,o=[55.753782,37.625084],a=[55.732284,37.552763];if($(".location-map").length>0){var t;ymaps.ready((function(){e=new ymaps.Map(document.querySelector(".location-map"),{center:o,zoom:13,controls:[]}),$(window).width()<1e3&&e.behaviors.disable("drag");e.behaviors.disable("scrollZoom"),t=new ymaps.Placemark(a,{hintContent:"",balloonContent:""},{iconLayout:"default#image",iconImageHref:"/img/map-pointer.png",iconImageSize:[34,47],iconImageOffset:[-5,-38]}),e.geoObjects.add(t)}))}$(".js-show-location").click((function(o){o.preventDefault();var t=$(this).parent();t.closest(".our-location").find(".js-map-trigger").addClass("active"),t.fadeOut(),e.setCenter(a),e.setZoom(15)})),$(".js-map-trigger").click((function(e){var o=$(this);o.removeClass("active"),o.next().next().find(".our-location-content").fadeIn()}))}));